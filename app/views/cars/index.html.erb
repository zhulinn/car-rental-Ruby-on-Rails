<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<%= form_tag(cars_path, method: "get") do %>
    <%= label_tag(:value, "Search for:") %>
    <%= select_tag :attribute, options_for_select([ 'Location','Model','Manufacturer','Style' ,'Status']) %>
    <%= text_field_tag(:value) %>
    <%= submit_tag("Search") %>
<% end %>

<br>
<br>

<table>
  <thead>
    <tr>
      <th>License</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Rate</th>
      <th>Style</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.license %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.model %></td>
        <td><%= car.rate %></td>
        <td><%= car.style %></td>
        <td><%= car.location %></td>
        <td><%= car.status %></td>
        <td><%= link_to 'Show', car %></td>
        <% if current_authority != $customer %>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_authority != $customer %>
<%= link_to 'New Car', new_car_path %>
<% end %>