<p id="notice"><%= notice %></p>

<h2>Admins</h2>

<table style="margin:0 auto">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= link_to 'Show', admin %></td>
        <% if current_user == admin %>
            <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <% end %>
        <% if (current_authority == $admin && current_user.id != admin.id) || current_authority == $superadmin %>
            <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
<br><br><br>
