<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
  <tr>
    <th>Car</th>
    <th>Customer</th>
    <th>Start</th>
    <th>End</th>
    <th>Hours</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @records.each do |record| %>
      <tr>
        <td><%= record.car.license %></td>
        <td><%= record.customer.name %></td>
        <td><%= record.start %></td>
        <td><%= record.end %></td>
        <td><%= record.hours %></td>

      </tr>
  <% end %>
  </tbody>
</table>

