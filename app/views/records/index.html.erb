<p id="notice"><%= notice %></p>

<h2>Records</h2>

<%= form_tag(records_path, method: 'get') do %>
    <%= label_tag(:value, 'Search by:') %>
    <%= select_tag :attribute, options_for_select(%w(license email)) %>
    <%= text_field_tag(:value) %>
    <%= submit_tag('Search') %>
<% end %>
<br>
<table style="margin:0 auto">
  <thead>
    <tr>
      <th>Car License</th>
      <th>Customer</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Duration</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.car.license %></td>
        <td><%= record.customer.email %></td>
        <td><%= record.start.in_time_zone('Eastern Time (US & Canada)') %></td>
        <td><%= record.end.in_time_zone('Eastern Time (US & Canada)') %></td>
        <td><%= record.hours %></td>
        <td><%= record.status %></td>
        <td><%= link_to 'Details', record %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
